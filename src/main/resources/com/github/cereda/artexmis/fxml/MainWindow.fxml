<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<VBox fx:id="mainWindow" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
      fx:controller="com.github.cereda.artexmis.gui.MainWindowController">
    <MenuBar fx:id="mbMain" prefHeight="29.0" prefWidth="${mainWindow.width}">
        <Menu text="%file">
            <MenuItem onAction="#openFile" text="%openfile"/>
            <MenuItem onAction="#saveFile" text="%savefile"/>
            <SeparatorMenuItem/>
            <MenuItem onAction="#quitApp" text="%quitapp">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="Q" control="ANY" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
        </Menu>
        <Menu text="%help">
            <MenuItem text="%about"/>
        </Menu>
    </MenuBar>
    <AnchorPane fx:id="codePane" prefWidth="${mbMain.width}" VBox.vgrow="ALWAYS"/>
    <HBox fx:id="statusBar" prefWidth="${mbMain.width}" spacing="10">
        <padding>
            <Insets left="10.0" top="5.0" bottom="5.0" right="10.0"/>
        </padding>
        <HBox HBox.hgrow="ALWAYS">
            <Label prefHeight="29.0" text="You don't give me enough work!"/>
        </HBox>
        <ProgressBar prefHeight="20.0" prefWidth="100.0"/>
    </HBox>
</VBox>
